{% set showMenu = showMenu ?? false %}
{% set moduleName = 'Conformance'|trans %}
{% set subPageTitle = subPageTitle ?? '' %}
{% set pagetitle = 'Conformance' ~ (subPageTitle ? ' | ' ~ subPageTitle : '')  %}

{% extends "base.twig" %}

{% block preload %}
    <link rel="stylesheet" href="{{ asset('css/src/default.css', 'conformance') }}">
{% endblock %}

{% block content %}

    <h2>{{ moduleName }}</h2>

    <div class="conformance-container">

        {% if showMenu %}
            {% include '@conformance/includes/menu.twig' %}
        {% endif %}

        <div class="content">
            <h3>{{ subPageTitle }}</h3>
            {% block conformanceContent %}{% endblock %}
        </div>
    </div>


{% endblock content -%}

{% block postload %}
    <script>
        (function() {
            window.conformance = {};
            window.conformance.nuclei = {};
        })();
    </script>
{% endblock postload %}

{% block conformancePostload %}{% endblock %}
